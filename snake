<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no">
<title>스네이크 게임</title>
<style>
  body {
    margin: 0;
    background: #111;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    overflow: hidden;
    touch-action: none;
  }
  canvas {
    background: #222;
    display: block;
  }
  #score {
    position: fixed;
    top: 10px;
    left: 50%;
    transform: translateX(-50%);
    color: white;
    font-family: Arial, sans-serif;
    font-size: 20px;
  }
</style>
</head>
<body>
<canvas id="game"></canvas>
<div id="score">점수: 0</div>
<script>
const canvas = document.getElementById("game");
const ctx = canvas.getContext("2d");
const grid = 20;

// 캔버스를 항상 grid 배수 크기로 설정
canvas.width = Math.floor(window.innerWidth / grid) * grid;
canvas.height = Math.floor(window.innerHeight / grid) * grid;

let snake = [{x: grid*5, y: grid*5}];
let dx = grid;
let dy = 0;
let food = {};
let score = 0;

function placeFood() {
  food = {
    x: Math.floor(Math.random() * (canvas.width / grid)) * grid,
    y: Math.floor(Math.random() * (canvas.height / grid)) * grid
  };
  // 음식이 뱀 몸에 생성되지 않도록 체크
  if (snake.some(part => part.x === food.x && part.y === food.y)) {
    placeFood();
  }
}
placeFood();

function gameLoop() {
  requestAnimationFrame(gameLoop);
  if (++count < 8) return;
  count = 0;

  ctx.clearRect(0,0,canvas.width,canvas.height);

  // 뱀 이동
  const head = {x: snake[0].x + dx, y: snake[0].y + dy};

  // 벽 통과 (wrap-around)
  if (head.x < 0) head.x = canvas.width - grid;
  if (head.x >= canvas.width) head.x = 0;
  if (head.y < 0) head.y = canvas.height - grid;
  if (head.y >= canvas.height) head.y = 0;

  // 자기 몸과 충돌 → 게임 리셋
  if (snake.some(part => part.x === head.x && part.y === head.y)) {
    snake = [{x: grid*5, y: grid*5}];
    dx = grid; dy = 0;
    score = 0;
    placeFood();
  }

  snake.unshift(head);

  // 음식 먹기
  if (head.x === food.x && head.y === food.y) {
    score++;
    placeFood();
  } else {
    snake.pop();
  }

  // 뱀 그리기
  ctx.fillStyle = "lime";
  snake.forEach(part => ctx.fillRect(part.x, part.y, grid-2, grid-2));

  // 음식 그리기
  ctx.fillStyle = "red";
  ctx.fillRect(food.x, food.y, grid-2, grid-2);

  document.getElementById("score").textContent = "점수: " + score;
}

let count = 0;
requestAnimationFrame(gameLoop);

// 스와이프 제스처
let touchStartX = 0, touchStartY = 0;
window.addEventListener("touchstart", e => {
  touchStartX = e.touches[0].clientX;
  touchStartY = e.touches[0].clientY;
}, {passive:true});

window.addEventListener("touchend", e => {
  const dxTouch = e.changedTouches[0].clientX - touchStartX;
  const dyTouch = e.changedTouches[0].clientY - touchStartY;

  if (Math.abs(dxTouch) > Math.abs(dyTouch)) {
    if (dxTouch > 0 && dx !== -grid) { dx = grid; dy = 0; }
    else if (dxTouch < 0 && dx !== grid) { dx = -grid; dy = 0; }
  } else {
    if (dyTouch > 0 && dy !== -grid) { dx = 0; dy = grid; }
    else if (dyTouch < 0 && dy !== grid) { dx = 0; dy = -grid; }
  }
}, {passive:true});

// 키보드도 지원
window.addEventListener("keydown", e => {
  if (e.key === "ArrowUp" && dy !== grid) { dx = 0; dy = -grid; }
  else if (e.key === "ArrowDown" && dy !== -grid) { dx = 0; dy = grid; }
  else if (e.key === "ArrowLeft" && dx !== grid) { dx = -grid; dy = 0; }
  else if (e.key === "ArrowRight" && dx !== -grid) { dx = grid; dy = 0; }
});
</script>
</body>
</html>
